@model RentMyStuff.Web.ViewModels.AssetFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add New Rentable</h2>

@*<h4>Asset</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Asset.Name" class="control-label"></label>
				<input asp-for="Asset.Name" class="form-control" />
				<span asp-validation-for="Asset.Name" class="text-danger"></span>
			</div>
            <div class="form-group">
                <label asp-for="Asset.Description" class="control-label"></label>
                <input asp-for="Asset.Description" class="form-control" />
                <span asp-validation-for="Asset.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset.AssetTypeId" class="control-label"></label>
                @*<input asp-for="AssetTypeId" class="form-control" />*@
				<select asp-for="Asset.AssetTypeId" asp-items="@(new SelectList(Model.AssetTypes, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Asset.AssetTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset.NumberInStock" class="control-label"></label>
                <input asp-for="Asset.NumberInStock" class="form-control" />
                <span asp-validation-for="Asset.NumberInStock" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="NumberAvailable" class="control-label"></label>
                <input asp-for="NumberAvailable" class="form-control" />
                <span asp-validation-for="NumberAvailable" class="text-danger"></span>
            </div>*@
			<input hidden asp-for="Asset.Id" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
